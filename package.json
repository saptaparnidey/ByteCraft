{
  "name": "bytecraft-desktop",
  "version": "1.0.0",
  "description": "Electron wrapper for ByteCraft",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "backend": "mvn spring-boot:run",
    "electron": "wait-on http://localhost:8080/index.html && electron .",
    "dev": "concurrently \"npm run backend\" \"npm run electron\""
  },
  "author": "ByteCraft Team",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^28.0.0",
    "wait-on": "^9.0.3"
  }
}
